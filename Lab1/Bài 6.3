import java.util.Scanner;
public class Bai3 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        for(int i=0;i<a;i++){
            for(int j=0;j<a-i-1;j++){
                System.out.printf(" ");
            }
            for(int j=0;j<2*i+1;j++){
                System.out.printf("*");
            }
            System.out.printf("\n");
        }
    }
}
