import java.util.Scanner;
public class Bai2_2_6 {
    
    public static void main(String[] args) {
        System.out.println("Chon loai phuong trinh ban muon giai: ");
        System.out.println("1. Giai phuong trinh bac nhat");
        System.out.println("2. Giai he phuong trinh 2 an");
        System.out.println("3. Giai phuong trinh bac 2");
        Scanner sc = new Scanner(System.in);
        while(true){
        int n=sc.nextInt();
        if(n==1) {
            double a=sc.nextDouble();
            double b=sc.nextDouble();
            linear_equation(a,b);
            break;
        }
        else if(n==2){
            linear_system();
            break;
        }
        else if(n==3){
             second_degree_equation();
             break;
        }
        else System.out.println("Vui long nhap lai");
        
    }
        }
    
    public static void linear_equation(double a,double b) {
        
        if(a==0){
            
            if(b==0) System.out.println("Phuong trinh co vo so nghiem");
            else System.out.println("Phuong trinh vo nghiem");
        }
        else{
            double c=-(double)b/a;
            System.out.printf("Nghiem cua phuong trinh la :%.2f",c);
        }
        
    }
    
    
    public static void linear_system(){
        Scanner sc= new Scanner(System.in);
        double a11=sc.nextDouble();
        double a12=sc.nextDouble();
        double b1=sc.nextDouble();
        double a21=sc.nextDouble();
        double a22=sc.nextDouble();
        double b2=sc.nextDouble();
        double D=a11*a22-a21*a12;
        double D1=b1*a22-b2*a12;
        double D2=a11*b2-a21*b1;
        if(D!=0){
            double x=D1/D,y=D2/D;
            System.out.println("Nghiem cua he phuong trinh la x1= "+x+" x2= "+y);
        }
        else{
            if(D1!=0||D2!=0){
                System.out.println("He phuong trinh vo nghiem");
            }
            else System.out.println("He phuong trinh co vo so nghiem");
        }
        
    }
    
    
    public static void second_degree_equation() {
        Scanner sc=new Scanner(System.in);
        double a=sc.nextDouble();
        double b=sc.nextDouble();
        double c=sc.nextDouble();
        if(a==0) linear_equation(b,c) ;
        else{
            double delta=b*b-4*a*c;
            if(delta<0) System.out.println("Phuong trinh bac hai vo nghiem");
            else if(delta==0){
                System.out.printf("Phuong trinh co nghiem kep x= %.2f",-b/(2*a));
            }
            else {
                double x1=(-b + Math.sqrt(delta)) / (2 * a);
                double x2=(-b - Math.sqrt(delta)) / (2 * a);
                System.out.printf("Phuong trinh co hai nghiem phan biet: x1 = %.2f, x2 = %.2f%n", x1, x2);
            }
        }
    }
    
}
