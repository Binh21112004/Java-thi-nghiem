import java.util.Scanner;
public class Bai5 {
    public static void main(String[] args) {
            Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        int [] a=new int[n];
        int sum=0;
        for(int i=0;i<n;i++){
            a[i]=sc.nextInt();
            sum+=a[i];
        }
    float avg=(float)sum/n;
    selection_sort(a,n);
    for(int i=0;i<n;i++){
        System.out.printf(a[i]+" ");
}        
        System.out.println("\n");
        System.out.println(sum);
        System.out.printf("%.2f",avg);
        sc.close();
        
    }
    public static void selection_sort(int a[],int n){
        for(int i=0;i<n-1;i++){
            int min_pos=i;
            for(int j=i+1;j<n;j++){
                if(a[min_pos]>a[j]){
                  min_pos=j;
                   }
}
            int tmp=a[i];
            a[i]=a[min_pos];
            a[min_pos]=tmp;

}
}
}
